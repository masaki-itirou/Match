<p class="text-center page_title"><%=t("title.login_page")%></p>
<form class="form-horizontal" style="position:relative;">
	<div class="form-group">
		<label for="login_form_name" 
			class="control-label"><%=t("name")%></label>
		<input id="login_form_name" class="form-control" type="text">
	</div>
	<div class="form-group">
		<label for="login_form_password" 
			class="control-label"><%=t("password")%></label>
		<input id="login_form_password" class="form-control" type="password">
	</div>
	<div class="form-group">
		<button type="button"
			style="position:absolute;right:0;" 
			class="btn btn-primary my-button-size" 
			id="login_form_send_button">
			<%=t("login.login")%>
		</button>
	</div>
</form>

<div hidden id="login_form_data" data-seed="<%=@seed%>" />

