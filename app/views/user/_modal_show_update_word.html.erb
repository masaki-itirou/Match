<div id="user_modal_show_update_word_fade"class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content" style="width:100%;">
			<div class="modal-body">
				<%= form_tag({controller:'user',
					action:'update_word'},
					{mehtod:'post',id:"user_modal_show_update_word_form",					 
					remote:true}) do
				%>
				<%= text_area_tag "word",'',
					id:"user_modal_show_update_word_word",
					placeholder:t("word"),
					style:"width:100%;height:18rem;"
				%>
				<div style="float:right;">
					<span id="user_modal_show_update_word_word_length">0</span>
					<span>/<%=UserLimit::WORD%></span>					
				</div>
				<%= submit_tag t("send"),
					style:"width:100%;margin-top:2%;",
					class:"btn btn-primary",
					data:{disable_with:t("sending")}
				%>
				<%end%>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" 
				data-dismiss="modal" style="width:100%">
					Close
				</button>
			</div>
		</div>
	</div>
</div>