<p class="text-center page_title"><%=t("title.make_account_page")%></p>
<form class="form-horizontal" style="position:relative;">
	<div class="form-group">
		<label for="user_new_name" class="control-label"><%=t("name")%></label>
		<input id="user_new_name"
		class="form-control" type="text">
		<p id="user_new_name_format_warning"></p>
		<p id="user_new_name_collision_warning"></p>
	</div>
	<div class="form-group">
		<label for="user_new_password" class="control-label"><%=t("password")%></label>
		<input id="user_new_password" class="form-control" type="password"/>		
	</div>
	<div class="form-group">
		<label for="user_new_confirm_password" class="control-label"><%=t("confirm_password")%></label>		
		<input id="user_new_confirm_password" class="form-control" type="password"/>		
	</div>	
	<div class="form-group">
		<label for="user_new_lang" class="control-label"><%=t("language")%></label>
		<select id="user_new_lang">
			<option id="user_new_lang_ja" value="ja" <%=@ja%>>日本語</option>
			<option id="user_new_lang_en" value="en" <%=@en%>>English</option>
		</select>
	</div>
	<button id ="user_new_send" type="button"
		style="position:absolute;right:0;" 
		class="btn btn-primary my-button-size">
		<%=t("user.create_account")%>
	</button>
</form>

