<div>
	<div class="caption">
		<label><%=t("thumbnail")%></label>
	</div>
	<span style="position:relative;">
		<%= image_tag(thumbnail_src(@own),
			id:"user_show_update_preview",			
			class:"img-rounded user_show_update_image_size",
		)%>
	</span>
</div>

<form class="form-horizontal">
	<div class="form-group">
		<label for="user_show_update_name" class="control-label"><%=t("name")%></label>
		<input id="user_show_update_name" class="form-control input-lg"
			value=<%=@own.name%> type="text"/>
	</div>
	<div class="form-group">
		<label for="user_show_update_password" class="control-label"><%=t("password")%></label>
		<input id="user_show_update_password" 
			class="form-control input-lg" type="password"/>		
	</div>
	<div class="form-group">
		<label for="user_show_update_confirm_password" class="control-label"><%=t("confirm_password")%></label>
		<input id="user_show_update_confirm_password" 
			class="form-control input-lg" type="password"/>
	</div>
	<div class="form-group">
		<label for="user_show_update_contact" class="control-label"><%=t("contact")%></label>
		<input id="user_show_update_contact"
		class="form-control input-lg" type="text"
		placeholder="skypeID EmailAddress Twitter"
		value="<%=@own.contact%>" type="text"/>
	</div>
	<div class="form-group">
		<label for="user_show_update_lang" class="control-label"><%=t("language")%></label>
		<select id="user_show_update_lang">
			<option value="ja" <%=@ja%>>日本語</option>
			<option value="en" <%=@en%>>English</option>
		</select>
	</div>
	<button type="button" class="btn btn-primary my-button-size"
		 id="user_show_update_send">
		<%=t("send")%>
	</button>
	<%=render partial:"delete_button"%>	
</form>

<div hidden>
	<%= form_tag({controller:"user",action:"update_thumbnail"},
		{method:'post',id:'user_show_update_image_form',
		remote:true,multipart:true}) do%>
		<%= file_field_tag 'image',id:"user_show_update_image"%>		
	<%end%>	
</div>